<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/English/front.xhtml</from-view-id>
        <navigation-case>
            <if>#{!frontManager.success}</if>
            <to-view-id>/English/front-error.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{frontManager.language}</from-action>
            <from-outcome>Swedish</from-outcome>
            <to-view-id>/Swedish/front.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/Swedish/front.xhtml</from-view-id>
        <navigation-case>
            <if>#{!frontManager.success}</if>
            <to-view-id>/Swedish/front-error.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{frontManager.language}</from-action>
            <from-outcome>English</from-outcome>
            <to-view-id>/English/front.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/restricted/recruiterPage.xhtml</from-view-id>
        <navigation-case>
            <if>#{!recruiterManager.success}</if>
            <to-view-id>/restricted/recruiterPage-error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
